<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:minHeight="60dp"
    >

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/stepTypeIcon"
        android:contentDescription="@string/contentdesc_step_type_icon"
        android:src="@drawable/ic_empty_step"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"/>

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/indicator"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp" >
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Pai"
        android:id="@+id/parentDesc"
        android:layout_toRightOf="@+id/stepTypeIcon"
        android:layout_toLeftOf="@+id/indicator"
        android:layout_above="@+id/stepDesc"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="2dp"
        android:textAppearance="@android:style/TextAppearance.Holo.Small"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/step_desc"
        android:id="@+id/stepDesc"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/stepTypeIcon"
        android:layout_toLeftOf="@+id/indicator"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="2dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="10dp"
        android:id="@+id/priorityStrip"
        android:src="@drawable/side_serrated"
        android:tint="@color/darkGray"
        android:adjustViewBounds="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:scaleType="centerCrop" />

</RelativeLayout>